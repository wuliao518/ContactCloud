        android:textColor="#ff0672d4"
        android:textSize="22.0sp" />

    <ListView
        android:id="@id/lv_fix_group"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="10.0dip"

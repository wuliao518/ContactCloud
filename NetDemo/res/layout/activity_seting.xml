<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textColor="@color/blue"
            android:textSize="18sp" />
    </LinearLayout>
	 <View
        android:background="@android:color/darker_gray"
        android:layout_height="1dp"
        android:layout_width="fill_parent"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/layoutSet"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:orientation="horizontal"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_marginTop="20dp"
            android:background="@drawable/list_above_nor_selector"
            android:gravity="center_vertical" >
            <ImageView
                android:id="@+id/textSetIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dp"
                android:text="设置"
                android:textColor="#ff707070"
                android:textSize="18.0sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="#ffc0c0c0" />

        <LinearLayout
            android:id="@+id/layoutNumber"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/list_mid_nor_selector"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/switchuser" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="账号管理"
                android:textColor="#ff707070"
                android:textSize="18.0sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="165dp"
                android:background="@drawable/triangle" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="#ffc0c0c0" />

        <LinearLayout
            android:id="@+id/layoutIdea"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/list_mid_nor_selector"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/readmode_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="意见反馈"
                android:textColor="#ff707070"
                android:textSize="18.0sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="165dp"
                android:src="@drawable/triangle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/version"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/list_mid_nor_selector"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/moreitems_version" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="检测版本"
                android:textColor="#ff707070"
                android:textSize="18.0sp" />

            <ImageView
                android:id="@+id/iconversion"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="165dp"
                android:src="@drawable/triangle" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/about"
            android:layout_width="fill_parent"
            android:layout_height="48.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:background="@drawable/list_below_nor_selector"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/moreitems_about_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:text="关于"
                android:textColor="#ff707070"
                android:textSize="18.0sp" />
        </LinearLayout>
     
        <LinearLayout
            android:id="@+id/ll_exit_user"
            android:layout_marginTop="30dp"
            android:background="@drawable/exit_selector"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:layout_height="48.0dip"
            >
            <TextView 
                android:text="退出"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#cc0001"/>
            
        </LinearLayout>
    </LinearLayout>
</LinearLayout>